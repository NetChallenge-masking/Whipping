<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/image_navigation_1_3">

    <ImageView
        android:id="@+id/beacon_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_navigation_current"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/beacon_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="400dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_navigation_current"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/beacon_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="850dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/ic_navigation_current"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="@+id/beacon_1"
        app:layout_constraintEnd_toStartOf="@+id/beacon_2"
        app:layout_constraintStart_toEndOf="@+id/beacon_1"
        app:layout_constraintTop_toTopOf="@+id/beacon_2" />

    <View
        android:id="@+id/view5"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/beacon_2"
        tools:layout_editor_absoluteX="410dp" />

    <View
        android:id="@+id/view6"
        android:layout_width="440dp"
        android:layout_height="50dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintEnd_toStartOf="@+id/beacon_3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/beacon_3" />

    <View
        android:id="@+id/view7"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="330dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/beacon_3" />

</androidx.constraintlayout.widget.ConstraintLayout>