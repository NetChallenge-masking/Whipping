<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/image_navigation_1_2">

    <ImageView
        android:id="@+id/beacon_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="500dp"
        android:src="@drawable/ic_navigation_current"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view12"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_marginStart="560dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view13" />

    <View
        android:id="@+id/view13"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="#2196F3"
        app:layout_constraintEnd_toStartOf="@+id/view12"
        tools:layout_editor_absoluteY="600dp" />

    <View
        android:id="@+id/view14"
        android:layout_width="50dp"
        android:layout_height="300dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="@+id/view13"
        app:layout_constraintEnd_toStartOf="@+id/view13" />

    <View
        android:id="@+id/view15"
        android:layout_width="50dp"
        android:layout_height="300dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/view14"
        app:layout_constraintStart_toStartOf="@+id/view14" />

    <View
        android:id="@+id/view16"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/view15"
        app:layout_constraintEnd_toEndOf="@+id/view15" />

</androidx.constraintlayout.widget.ConstraintLayout>