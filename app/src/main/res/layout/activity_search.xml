<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="search.SearchActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rec_Btn"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="244dp"

        android:background="@drawable/ic_mic_offs"
        android:contentDescription="가운데에 위치한 음성 인식 버튼을 눌러주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rec_EditTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tap To Speech"
        android:textColor="@color/searchcolor"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_Btn"
        app:layout_constraintVertical_bias="0.264" />
</androidx.constraintlayout.widget.ConstraintLayout>