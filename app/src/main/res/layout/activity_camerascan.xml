<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/image_details"
        android:layout_width="400dp"
        android:layout_height="446dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="텍스트 결과"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cameraBackBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_read_text"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_text_voice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_details" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cameraBackBtn"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/btn_barcode_background"
        android:text="카메라 스캔"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_read_text"
        app:layout_constraintTop_toBottomOf="@+id/image_details" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/barcordScanGoBtn"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_barcode_background"
        android:text="상품 담기"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/btn_read_text"
        app:layout_constraintTop_toBottomOf="@+id/image_details" />/>

</androidx.constraintlayout.widget.ConstraintLayout>